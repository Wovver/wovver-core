{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "types": ["node", "express"],  // Make sure 'express' types are included
    "typeRoots": ["./node_modules/@types", "./@types"],  // Ensure correct path to custom types
    "lib": ["es2017", "esnext.asynciterable"],
    "allowJs": false,
    "resolveJsonModule": true,
    "noImplicitAny": true
  },
  "include": [
    "src/**/*.ts",
    "@types/**/*.d.ts"  // Ensure custom types are included here
  ],
  "exclude": [
    "node_modules"
  ]
}
